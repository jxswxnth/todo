<%-include("../partials/header", {title: "Task List"})-%>
    <div class="box">
      <% for(var i=0;i<listOfTasks.length;i++){ %>
        <div class="item">
          <input type="checkbox">
          <p><%= listOfTasks[i] %></p>
        </div>
      <% } %>

    <form class="item" action="/" method="post">
      <input type="text" name="newTask" placeholder="                                               ✒️" autofocus autocomplete="off">
      <button class="add" type="submit" name="taskORwork" value=<%= heading %>>+</button>
    </form>
    </div>
<%-include("../partials/footer")-%>
